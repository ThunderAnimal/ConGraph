<!DOCTYPE html>
<html>
<head>
    <title>ConGraph</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/panel.css" />
    <link rel="stylesheet" href="../css/layout.css" />
    <link rel="stylesheet" href="../css/bootstrap-theme.css" />
    <link rel="stylesheet" href="../css/bootstrap.css" />
    <link rel="stylesheet" href="../css/jquery-ui.min.css">

    <script src="/socket.io/socket.io.js"></script>
    <script src="../js/jquery.min.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/home.js"></script>
    <script src="../js/jquery-ui.min.js"></script>

</head>
<body>
<header>ConGraph <a>powered by NoteJS</a></header>


<aside>
    <div>
        <input id="btnNewPanel" type="submit" value="Add Panel">
    </div>
    <div>
        <input id="btnAddDashboardModal" onclick="$('#modalNewDashboard').modal('show')" type="submit" value="Add Dashboard">
    </div>
    <div>
        <input id="btnAddUserToDashboardModal" onclick="$('#modalAddUserToDashboard').modal('show')" type="submit" value="Add User To Dashboard">
    </div>
    <div class="dropdown">
        <button id="btnDashboardList" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="true">
            Dropdown
            <span class="caret"></span>
        </button>
        <ul id="dashboardList" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            <!--Content Load Dynamik-->
        </ul>
    </div>
    <div class="chatTitle">
        <h1>CHAT</h1>
        <input id="name" type="text" placeholder="dein Name" />
        <input id="text" type="text" placeholder="schreibe etwas..." />
        <input id="senden" type="submit" class="btn" value="senden" />
    </div>
    <div class="chatList">
        <ul id="content"></ul>
        <br>
        <br>
    </div>

</aside>

<section>
    <div id="dashboard">
        <!--Generate dynamic-->
    </div>
</section>


<!--Modal Add User To Dashboard-->
<div class="modal fade" id="modalAddUserToDashboard" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add user to dashboard</h4>
            </div>
            <div class="modal-body">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1">@</span>
                    <input id="inputUserMail" type="text" class="form-control" placeholder="e-Mail Adresse User" aria-describedby="sizing-addon1">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnAddUserToDashboard">Add User</button>
            </div>
        </div>
    </div>
</div>

<!--Modal New Dashboard-->
<div class="modal fade" id="modalNewDashboard" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Add dashboard</h4>
            </div>
            <div class="modal-body">
                <div class="input-group input-group-lg">
                    <input id="inputDashboardName" type="text" class="form-control" placeholder="Dashboard Name" aria-describedby="sizing-addon1">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnAddDashboard">Add Dashboard</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>